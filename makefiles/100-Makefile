CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)

$(NAME): m.h

m.h:
	@if [ ! -f m.h ]; then \
		echo "Missing header file: m.h"; \
		exit 1; \
	fi

