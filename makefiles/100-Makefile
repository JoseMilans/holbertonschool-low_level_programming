CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	@if [ ! -f m.h ]; then \
		echo "Missing header file: m.h"; \
		exit 1; \
	fi
	$(CC) $(CFLAGS) -o $@ $^

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean
	@$(RM) $(NAME)

re: fclean all

RM := rm -f
RM += $(RM)

