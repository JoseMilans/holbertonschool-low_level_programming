CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	@if [ ! -f m.h ]; then \
		echo "Missing header file: m.h"; \
		exit 1; \
	fi
	$(CC) -o $@ $^

clean:
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

RM := rm -f

