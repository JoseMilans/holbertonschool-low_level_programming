CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(SRC) m.h
	@if [ ! -f m.h ]; then \
		echo "Missing header file: m.h"; \
		exit 1; \
	fi
	$(CC) $(CFLAGS) -o $@ $(SRC)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *.o

fclean: clean oclean

re: fclean all

